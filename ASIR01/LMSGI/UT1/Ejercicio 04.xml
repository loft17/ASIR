<?xml version="1.0" encoding="iso-8859-1" standalone="yes"?> 
<!-- Se abre declara la primera linea donde indicamos la version de xml, codificacion y si es necesario otro
        xml para su interpretacion. Añadimos la codificacion iso-8859-1 para poder agregar tildes a los nombres
        o la "ñ" -->
        
<!-- Declaramos el tipo de dumento que vamos a crear, en este caso es una agenda. -->
<!DOCTYPE alumnos>

<!-- Abrimos la etiqueta "cfgs_dam" para alojar todo lo referente al "ciclo formativo DAM" -->
<cfgs_dam>
    <!-- Abrimos la etiqueta para guardar la informacion del modulo de CFGS -->
    <modulo nombre="Lenguajes de Marcas y Sistemas de Gestión de Información"></modulo>

        <!-- Declaramos las etiquetas con la informacion del curso -->
        <horas_semanales>4</horas_semanales>
        <caracter>obligatorio</caracter>
        <fecha_inicio dia="24" mes="octubre" año="2022">
        <fecha_fin dia="30" mes="junio" año="2023">

        <!-- Creamos la etiqueta para alojar la información referente a un -->
        <alumno nombre="NOMBRE" apellidos="APELLIDOS">

            <!-- Datos personales del alumno -->
            <datos_personales>
                <dni>DNI</dni>
                <telefono>TELEFONO</telefono>
                <email>EMAIL</email>
                <direccion>
                    <calle>CALLE</calle>
                    <numero>NUMERO</numero>
                    <ciudad>CIUDAD</ciudad>
                    <codpostal>CODIGOPOSTAL</codpostal>
                </direccion>
            </datos_personales>

            <!-- Creamos la etiqueta "datos_academicos" para guardar la información
                    academica del alumno -->
            <datos_academicos>
                <nota>NOTA</nota>
                <faltas_asistencia>FALTAS</faltas_asistencia>
            <datos_academicos>

        </alumno>

</cfgs_dam>
<!-- FIN -->