<?xml version="1.0" encoding="iso-8859-1" standalone="yes"?> 
<!-- Se abre declara la primera linea donde indicamos la version de xml, codificacion y si es necesario otro
        xml para su interpretacion. Añadimos la codificacion iso-8859-1 para poder agregar tildes a los nombres
        o la "ñ" -->
        
<!-- Declaramos el tipo de dumento que vamos a crear, en este caso es una agenda. -->
<!DOCTYPE librorecetas>
    
    <!-- Abrimos la etiqueta "receta" para guardar dentro toda la informacion
            referencte para . -->
    <receta>

        <!-- Creamos las etiquetas con el nombre del plato y el numero de comensales de la receta -->
        <plato>Sopa de cebolla</plato>
        <comensales>4</comensales>

        <ingrediente nombre='cebollas' cantidad='3' unidad='Kg'></ingrediente>
        <ingrediente nombre='zanahorias' cantidad='3' unidad='Kg'></ingrediente>
        <ingrediente nombre='caldo de carne' cantidad='2' unidad='l'></ingrediente>
        <ingrediente nombre='mantequilla' cantidad='300' unidad='gr'></ingrediente>
        <ingrediente nombre='harina' cantidad='3' unidad='cucharada'></ingrediente>
        <ingrediente nombre='queso emmental suizo o gruyére rallado' cantidad='250' unidad='gr'></ingrediente>
        <ingrediente nombre='Pan de molde tostado en rebanadas'></ingrediente>
        <ingrediente nombre='Tomillo'></ingrediente>
        <ingrediente nombre='Comino molido'></ingrediente>
        <ingrediente nombre='Pimienta'></ingrediente>
        <ingrediente nombre='Laurel' cantidad='1' unidad='hoja' ></ingrediente>

        <!-- Abrimos la etiqueta instrucciones para explicar paso a paso como se debe cocinas
                la receta. -->
        <instrucciones>
                <paso orden='1' detalles='Pelar y partir las cebollas en rodajas finas.'></paso>
                <paso orden='2' detalles='Rehogarlas con la mantequilla, sal y pimienta a fuego lento hasta que estén transparentes sin dorarse.'></paso>
                <paso orden='3' detalles='Añadir la harina sin dejar de remover.'></paso>
                <paso orden='4' detalles='Ponerlo en una cazuela con el caldo, el tomillo, el laurel y el resto de especias.'></paso>
                <paso orden='5' detalles='Cocer a fuego fuerte 5 minutos.'></paso>
                <paso orden='6' detalles='Dejar cocer a fuego lento durante unos 15 minutos.'></paso>
                <paso orden='7' detalles='Poner las rebanadas de pan de molde tostadas encima.'></paso>
                <paso orden='8' detalles='Espolvorear el queso y gratinar al horno durante 30 minutos.'></paso>
                <paso orden='9' detalles=''></paso>
                <paso orden='10' detalles=''></paso>
        </instrucciones>
            
    </receta>
